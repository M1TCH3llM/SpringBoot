package com.synergisticit.util;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.core.annotation.Order;
import org.springframework.stereotype.Component;

import com.synergisticit.domain.Employee;
import com.synergisticit.service.EmployeeService;

//@Order(value=1)
@Order(value=3)
@Component
public class ABC implements CommandLineRunner{
	
	@Autowired EmployeeService employeeService;
	
	@Override
	
	public void run(String... args) throws Exception {
		System.out.println("=============ABC================");
		System.out.println("Finding employees with a name");
		List<Employee> employee= employeeService.findByName("Mike");
		employee.forEach(e -> System.out.println(e));
		
		
		System.out.println("\nFind employeea by designation");
		employee = employeeService.findByDesignation("Programmer");
		employee.forEach(e -> System.out.print(e));
		
		System.out.println("\nFind employeea by Name");
		employeeService.findByName("Mike");
		employee.forEach(e -> System.out.print(e));
		
			}

}
